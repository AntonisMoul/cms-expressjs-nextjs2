# Local Development με MySQL (χωρίς Docker)

# Database Configuration - Local MySQL/MariaDB
DATABASE_URL="mysql://root@localhost:3306/cms_db"

# Redis Configuration - Απενεργοποιημένο
REDIS_URL="redis://disabled:6379"

# JWT Configuration
JWT_ACCESS_TOKEN_SECRET="local-mysql-dev-secret-key-change-in-production"
JWT_REFRESH_TOKEN_SECRET="local-mysql-dev-refresh-secret-change-in-production"
JWT_ACCESS_TOKEN_EXPIRY="15m"
JWT_REFRESH_TOKEN_EXPIRY="7d"

# Server Configuration
NODE_ENV="development"
API_PORT=3001
WEB_PORT=3000

# CORS Configuration
CORS_ORIGIN="http://localhost:3000"

# Email Configuration - Console logging
MAIL_HOST="console"
MAIL_PORT=587
MAIL_SECURE=false
MAIL_USER=""
MAIL_PASS=""

# Site Configuration
SITE_URL="http://localhost:3000"
SITE_NAME="Botble CMS (MySQL Local)"
SITE_DESCRIPTION="Modern CMS built with Next.js and Express.js - MySQL Local Development"

# Admin Configuration
ADMIN_EMAIL="admin@example.com"
ADMIN_PASSWORD="admin123"

# Upload Configuration
UPLOAD_MAX_SIZE="10MB"
UPLOAD_DESTINATION="./storage/uploads"

# Session Configuration
SESSION_SECRET="local-mysql-dev-session-secret-change-in-production"

# Local Development Flags
USE_DOCKER_SERVICES=false
USE_LOCAL_MYSQL=true
USE_CONSOLE_EMAIL=true
